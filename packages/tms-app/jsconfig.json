{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "checkJs": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES6",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "exclude": ["node_modules"]
}
